<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="material_registration_form_view">
        <field name="name">material.registration.form</field>
        <field name="model">material.registration</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="material_code"/>
                        <field name="material_name"/>
                        <field name="material_type"/>
                        <field name="material_buy_price"/>
                        <field name="supplier_id"/>
                    </group>
                    <footer>
                        <button string="Save" type="object" name="action_save" class="btn-primary"/>
                        or
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
